{
    "name": "vrgamedeals-tools",
    "version": "2.0.0",
    "author": "Kevin Novak",
    "description": "Tools for r/vrgamedeals.",
    "license": "MIT",
    "private": true,
    "engines": {
        "node": ">=12.14.0"
    },
    "main": "dist/app.js",
    "scripts": {
        "lint": "tslint --project .",
        "lint:fix": "tslint --fix --project .",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "build": "tsc",
        "postinstall": "tsc",
        "start": "npm run build && node --enable-source-maps dist/app.js",
        "start:pm2": "npm run build && pm2 start process.json",
        "stop:pm2": "pm2 stop process.json",
        "delete:pm2": "pm2 delete process.json"
    },
    "dependencies": {
        "cheerio": "1.0.0-rc.3",
        "express": "4.17.1",
        "express-promise-router": "4.0.1",
        "node-fetch": "2.6.1",
        "pm2": "^4.5.0"
    },
    "devDependencies": {
        "@types/cheerio": "0.22.22",
        "@types/express": "4.17.8",
        "@types/node": "14.14.5",
        "@types/node-fetch": "2.5.7",
        "prettier": "^2.1.2",
        "tslint": "^6.1.3",
        "typescript": "^4.0.5"
    }
}
